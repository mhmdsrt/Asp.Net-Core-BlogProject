@using EntityLayer.Concrete
@model IEnumerable<Comment>
@*
    Gelen model belirli bir blgo id'sine eşit yorumları getiren Comment tipinde bir liste olduğu için eğer bloğa ait hiç yorum bulamazsa boş
    bir liste geleceğinden dolayı aşağıdaki gibi listenin count değeri ile yorum yapılıp yapılmadığını kontrol ediyoruz.
*@
<div class="comment-top" id="CommentDiv">
    <h4>Yorumlar</h4>
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="media">

                <img src="~/BlogTemplate/blogResmi.png" alt="" class="img-fluid" style="object-fit: cover;border-radius: 50%; width:45px;height:45px;" />
                <div class="media-body">

                    <h5 class="mt-0" style="font-family:Georgia; color:darkred">@item.CommentUserName</h5>
                    <p style="font-size:14px;">
                        @item.CommentContent
                        <br />
                        <strong style="font-family:Bahnschrift; color:green"> Oluşturulma Tarihi: @item.CommentCreateDate.ToLongDateString()</strong>
                    </p>
                </div>
            </div>
        }
    }
    else if (Model.Count() == 0)
    {

        <div class="media">

@*             <img src="~/BlogTemplate/images/t1.jpg" alt="" class="img-fluid" />
 *@            <div class="media-body">

                <h5 class="mt-0">Yorum bulunamadı.</h5>
                <p>
                    İlk yorumu siz yapmak ister misiniz?
                </p>

            </div>

        </div>

    }


</div>
