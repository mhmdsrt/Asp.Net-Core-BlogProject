@using EntityLayer.Concrete
@model IEnumerable<Blog>

<div class="tech-btm">
	<h4>Yazarın Son 3 Bloğu</h4>

	<div class="blog-grids row mb-3">
		@foreach(var item in Model){
		<div class="col-md-5 blog-grid-left">
			<a href="single.html">
				<img src="~/BlogTemplate/images/1.jpg" class="img-fluid" alt="">
			</a>
		</div>
		<div class="col-md-7 blog-grid-right">

			<h5>
				<a href="single.html">@item.BlogTitle </a>
			</h5>
			<div class="sub-meta">
				<span>
					<i class="far fa-clock"></i> @(((DateTime)(item.BlogCreateDate)).ToString("dd-MMM-yyyy"))
					</span>						     
			</div>
		</div>
		}
	</div>
</div>
