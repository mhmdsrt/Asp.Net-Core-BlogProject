@using EntityLayer.Concrete
@model Writer
<li class="nav-item nav-profile">
    <a href="/Writer/Index" class="nav-link">
        <div>
            <img src="~/WriterAddedImages/@Model.WriterImage" alt="image" class="profile-pic;" style="object-fit: cover; border-radius: 50%; width:60px;height:60px;"> @*style="object-fit: cover -> resmi sığdırır, Görselin düzgün oturmasını sağlar*@
            <span class="login-status online"></span>
            <!--change to offline or busy as needed-->
        </div>
        <div class="nav-profile-text d-flex flex-column">
            <span class="font-weight-bold mb-2">@Model.WriterName</span>
            <span class="text-secondary text-small">@Model.WriterMail</span>
        </div>
        <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
    </a>
</li>