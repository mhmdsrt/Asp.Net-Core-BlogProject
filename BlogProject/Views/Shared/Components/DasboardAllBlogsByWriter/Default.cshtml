@using EntityLayer.Concrete
@model IEnumerable<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bloglarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Blog </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Oluşturulma Tarihi </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image">
                                    </td>
                                    <td>@item.BlogTitle</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                    </td>
                                    <td>@item.BlogCreateDate.ToShortDateString()</td>
                                    <td><a href="/Blog/BlogDetail/@item.BlogID "class="btn btn-outline-primary">Bloğa Git</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>