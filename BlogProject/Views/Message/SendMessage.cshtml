@using EntityLayer.Concrete
@model Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{  
    <div>
        <label class="badge badge-gradient-info" style="font-size:20px;">
            Konu
        </label>
        @Html.TextBoxFor(s => s.MessageSubject, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label class="badge badge-gradient-info" style="font-size:20px;">
            Mesaj İçeriği
        </label>
        @Html.TextAreaFor(s => s.MessageDetails, 10, 2, new { @class = "form-control" })
    </div><br />
    <div>
        <div>
            <label class="badge badge-gradient-info" style="font-size:20px;">
                Gönderilecek Kişi
            </label>
        </div>
        <div>
            <img src="~/WriterAddedImages/@ViewBag.WriterImage" alt="image" class="profile-pic;" style="object-fit: cover; border-radius: 50%; width:85px;height:85px;"> @*style="object-fit: cover -> resmi sığdırır, Görselin düzgün oturmasını sağlar*@
            <label class="badge badge-gradient-danger" style="font-size:14px;margin-left:10px;">@ViewBag.WriterName</label>
            <label class="badge badge-gradient-secondary" style="font-size:14px; margin-left:10px;">@ViewBag.WriterMail</label>
        </div>
    </div>
    <br />
    <!-- WriterID'yi gizli input olarak ekleyelim -->
    <input name="WriterID" value="@ViewBag.WriterID" type="hidden"/>
    <button class="btn btn-outline-dribbble">Mesajı Gönder</button>
}
